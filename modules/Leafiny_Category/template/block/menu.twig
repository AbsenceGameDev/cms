{% set tree = block.getTree %}
{% if tree is not empty %}
    <nav>
        <div id="navigation">
            <div class="navigation-content">
                <div class="pure-menu pure-menu-horizontal">
                    <button class="pure-menu-link" id="menu-sm-link"><span>Menu</span></button>
                    <ul class="pure-menu-list menu-list categories">
                        {% for category in tree %}
                            <li class="pure-menu-item">
                                <a href="{{ page.getUrl }}{{ category.path_key }}.html" class="pure-menu-link{% if category.children %} has-children{% endif %}{% if block.isActive(category.path_key) %} active{% endif %}">{{ category.name }}</a>
                                {% if category.children %}
                                    <ul class="pure-menu-list child">
                                    {% for child in category.children %}
                                        <li class="pure-menu-item">
                                            <a href="{{ page.getUrl }}{{ child.path_key }}.html" class="pure-menu-link">{{ child.name }}</a>
                                        </li>
                                    {% endfor %}
                                    </ul>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </nav>
{% endif %}