<button type="button" class="pure-button black" id="admin-menu-button">
    {{ 'Menu'|translate }}
</button>
<nav>
    <div class="nav-content pure-menu">
        <a href="{{ page.getUrl }}" id="admin-menu-logo"><img class="logo" src="{{ page.getMediaUrl('Backend::logo-admin.png') }}" alt="Leafiny" /></a>

        {% for title, children in page.getCurrent.getTree %}
            <span class="pure-menu-heading">{{ title|translate }}</span>
            <ul class="pure-menu-list">
                {% for link in children %}
                    <li class="pure-menu-item{% if page.getObjectIdentifier == link.path %} pure-menu-active{% endif %}"><a href="{{ page.getUrl(link.path) }}" class="pure-menu-link">{{ link.title|translate }}</a></li>
                {% endfor %}
            </ul>
        {% endfor %}
    </div>
</nav>