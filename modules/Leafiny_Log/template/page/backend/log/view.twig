{% set log = page.getLog %}
<div class="container-form">
    <div class="pure-form pure-form-stacked">
        <div class="pure-u-1 toolbar">
            <a href="{{ page.getRefererUrl }}" class="pure-button gray">{{ 'Back'|translate }}</a>
        </div>

        <fieldset>
            <legend>{{ 'Log'|translate }}</legend>
            <div class="pure-g">
                <div class="pure-u-1 field">
                    <label>{{ 'Created At'|translate }} :</label>
                    <div class="pure-u-1 pure-u-xl-4-5">{{ page.formatDate(log.getCreatedAt) }}</div>
                </div>
                <div class="pure-u-1 field">
                    <label>{{ 'Level'|translate }} :</label>
                    <div class="pure-u-1 pure-u-xl-4-5">{{ page.getLevelText(log.getLevel) }}</div>
                </div>
                <div class="pure-u-1 field">
                    <label>{{ 'Message'|translate }} :</label>
                    <blockquote class="pure-u-1 pure-u-xl-4-5">{{ log.getMessage|nl2br }}</blockquote>
                </div>
            </div>
        </fieldset>
    </div>
</div>