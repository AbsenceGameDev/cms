{% set message = page.getMessage %}
<div class="container-form">
    <div class="pure-form pure-form-stacked">
        <div class="pure-u-1 toolbar">
            <a href="{{ page.getRefererUrl }}" class="pure-button gray">{{ 'Back'|translate }}</a>
        </div>

        <fieldset>
            <legend>{{ 'Message'|translate }}</legend>
            <div class="pure-g">
                <div class="pure-u-1 pure-u-xl-4-5 field">
                    <label>{{ 'Created At'|translate }} :</label>
                    <div class="pure-u-1">{{ page.formatDate(message.getCreatedAt) }}</div>
                </div>
                <div class="pure-u-1 pure-u-xl-4-5 field">
                    <label>{{ 'Name'|translate }} :</label>
                    <div class="pure-u-1">{{ message.getName }}</div>
                </div>
                <div class="pure-u-1 pure-u-xl-4-5 field">
                    <label>{{ 'E-mail'|translate }} :</label>
                    <div class="pure-u-1"><a href="mailto:{{ message.getEmail }}">{{ message.getEmail }}</a></div>
                </div>
                <div class="pure-u-1 pure-u-xl-4-5 field">
                    <label>{{ 'Message'|translate }} :</label>
                    <blockquote>{{ message.getMessage|nl2br }}</blockquote>
                </div>
            </div>
        </fieldset>
    </div>
</div>